<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Plant Name"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMonthsToFullMaturity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Months to Full Maturity"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvmonthsTofullmaturity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Seed Condition"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvSoilCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Soil Condition"
                android:textSize="21sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvsoilcondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Soil Condition"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvWaterFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Water Frequency"
                android:textSize="21sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvwaterfrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Water Frequency"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvWaterMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Water Method"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvwatermethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Water Method"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvLighteningCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Lightening Condition"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvlighteningcondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Lightening Condition"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvAdditionalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Additional Info"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvadditionalinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginTop="20dp"
                android:text="Additional Info"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btStartPlanting"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="100dp"
        android:text="Start Planting" />
</LinearLayout>
